<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
   <EditText
           android:hint="@string/panjang"
           android:id="@+id/ini_edt_satu"
           android:layout_width="match_parent" android:layout_height="wrap_content"
             />
    <EditText
            android:hint="@string/lebar"
            android:id="@+id/ini_edt_dua"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    />
    <EditText
            android:hint="@string/tinggi"
            android:id="@+id/ini_edt_tiga"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    />
    <Button
            android:id="@+id/btn_hasil"
            android:text="@string/hasil"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

<TextView
        android:gravity="center"
        android:hint="@string/hasilnya"
        android:id="@+id/tv_hasil"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>











</LinearLayout>














